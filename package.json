{
  "name": "cftm",
  "version": "0.0.0",
  "description": "A JSON-based text markup",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cinnabar-forge/markup.git"
  },
  "license": "ISC",
  "author": {
    "name": "Timur Moziev",
    "email": "timur.moziev@gmail.com",
    "url": "https://timurrin.github.io"
  },
  "type": "module",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "bin": {
    "cftm": "bin/cftm.js"
  },
  "files": [
    "bin",
    "schemas",
    "src",
    "types"
  ],
  "scripts": {
    "declare-types": "tsc -d --allowJs --emitDeclarationOnly src/index.js",
    "format": "npx prettier . --write",
    "lint": "npx eslint --max-warnings 0 .",
    "lint:fix": "npx eslint --fix .",
    "test": "mocha 'tests/**/*.test.js'"
  },
  "dependencies": {
    "ajv": "8.16.0"
  },
  "devDependencies": {
    "@cinnabar-forge/eslint-plugin": "0.4.0",
    "@cinnabar-forge/meta": "0.1.2",
    "chai": "5.1.1",
    "json-schema-to-typescript": "14.0.5",
    "mocha": "10.4.0",
    "pre-commit": "1.2.2"
  },
  "pre-commit": [
    "lint",
    "format",
    "test"
  ]
}
