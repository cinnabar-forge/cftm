{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cinnabar Markup Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "type": { "type": "string" },
      "value": {
        "type": "array",
        "items": { "$ref": "#/definitions/textElement" }
      },
      "multiValue": {
        "type": "array",
        "items": {
          "type": "array",
          "items": { "$ref": "#/definitions/textElement" }
        }
      },
      "codeLanguage": { "type": "string" }
    },
    "required": ["type"],
    "additionalProperties": false
  },
  "definitions": {
    "textElement": {
      "type": "object",
      "properties": {
        "text": { "type": "string" },
        "highlight": { "type": "string", "enum": ["b", "i", "u", "code"] }
      },
      "required": ["text"],
      "additionalProperties": false
    }
  }
}
